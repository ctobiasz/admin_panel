<div class="profile-top-thing">Cohorts</div>

<table id="students-table">
  <tr class="top-row-table">
    <th>Cohort Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Cohort Profile</th>
    <th>Remove Cohort</th>
  </tr>
<% @cohort.each do |cohort| %>
    <tr id="cohortyoink-<%= cohort.id %>">
      <td><%= cohort.name %></td>
      <td><%= cohort.start_date %></td>
      <td><%= cohort.end_date %></td>
      <td class="table-styles"><a href="/cohorts/<%= cohort.id %>">View Cohort</a></td>
      <td class="table-styles" style="font-size: 1.5em; padding-left: 30px; align-items: center; vertical-align: middle;justify-content: center; display: flex;
      }">
        <%= link_to cohort_path(cohort.id), { method: :delete, data: {confirm: 'Are you sure?'}, :remote => true } do %>
        <i class="far fa-trash-alt animated rubberBand" id="trashbin-animation"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
    </table>

    <br>
<p class="edit-button-all">
    <%= link_to root_path,  { class: 'btn btn-primary goback-button' } do %>
    <i class="fas fa-long-arrow-alt-left"></i> Back
    <% end %>
  </p>
