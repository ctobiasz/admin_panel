<div class="profile-top-thing">Student Signup</div>

<body class="sign-up-body">

  <div class="sign-up-container">

      <div class="sign-up-box">

<%= form_for(@student) do |form| %>
<label>What is your first name?</label><br>
<%= form.text_field :first_name %> <br>

<label>What is your last name?</label><br>
<%= form.text_field :last_name %> <br>

<label>What is your age?</label><br>
<%= form.number_field :age %> <br>

<label>What is your education level?</label><br>
<%= form.select :education, ["", "Highschool Diploma", "Bachlor Degree", "Master's Degree", "Ph.D"]%><br>



<p>
<%= form.submit "Create Student", {class: "btn btn-danger", id: "edit-button-style" } %>

</p>

<% end %>

</div>
</div>
</body>
