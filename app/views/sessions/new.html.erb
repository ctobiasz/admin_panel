<style>
form {
display: flex;
align-items: center;
justify-content: center;
vertical-align: middle;
}
.inner-one {
  margin-top: 30
  position: absolute;
  height: 50%;
}
</style>

<% provide(:title, "Log in") %>
<h1>Log in</h1>

<form>


    <%= form_for(:session, url: login_path) do |f| %>

    <div class="inner-one"><%= f.label :email%></div>
    <div class="inner-one"><%= f.email_field :email, class: "form-control" %></div>

    <div class="inner-one"><%= f.label :password %></div>
    <div class="inner-one"><%= f.password_field :password, class: "form-control"%></div>

    <%=   f.submit "Log in", class: "btn btn-primary"%>
  <% end %>

</form>
